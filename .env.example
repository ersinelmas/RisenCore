# --- Environment variables for Docker Compose ---
# Copy this file to .env and fill in your own secure values.
# The .env file is ignored by Git.

# PostgreSQL Database Credentials
DB_NAME=risencore_db
DB_USER=risencore_user
DB_PASSWORD=replace_with_secure_password

# JDBC URL consumed by Spring Boot (containers use "postgres-db" as host)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres-db:5432/risencore_db

# JWT secret key for the backend application (should be a long, Base64 encoded string)
JWT_SECRET=replace_with_secure_jwt_secret

# Google Gemini API
GEMINI_API_KEY=replace_with_gemini_api_key
GEMINI_MODEL_NAME=gemini-2.5-flash

# Spring profile selection (dev|prod)
SPRING_PROFILES_ACTIVE=dev
